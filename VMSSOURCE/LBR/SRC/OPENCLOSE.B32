END;		! lbr$ret_rmsstv


%SBTTL	'read_n_map_blocks'

ROUTINE read_n_map_blocks ( vbn, addr, numblocks ) =
!++
!
!	This routine reads up to 10 blocks from the DCX
!	map for this library file.  	
!
!	Inputs:
!		vbn	= block number at which to begin
!				reading from file
!		addr	= longword to receive address of blocks
!		numblocks = number of blocks to read
!
!	Outputs:
!		addr = address of blocks read
!
!--

BEGIN

BIND
    context = .lbr$gl_control [lbr$l_ctxptr]: BBLOCK,
    rab     = .context [ctx$l_recrab]       : BBLOCK;

LOCAL
    status;

perform ( get_mem ( lbr$c_pagesize * .numblocks, rab[rab$l_ubf]));
rab[rab$w_usz] = lbr$c_pagesize * .numblocks;
rab[rab$l_bkt] = .vbn;

status = $READ ( RAB = rab );

IF NOT .status
THEN
    lbr$gl_rmsstv = .rab [rab$l_stv];

.addr = .rab [rab$l_rbf];

RETURN .status;

END;

